{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/*",
    "server/**/*",
    "client/**/*",
    "*.ts"
  ]
} 