{
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": [
        "eqeqeq",
        "no-const-assign",
        "no-eval",
        "no-sparse-arrays",
        "no-throw-literal",
        "prefer-const"
      ],
      "exclude": [
        "ban-untagged-todo",
        "camelcase",
        "default-param-last",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "no-external-import",
        "no-implicit-any",
        "no-non-null-assertion",
        "no-unnecessary-type-assertion",
        "no-unused-vars",
        "triple-slash-reference"
      ]
    },
    "include": ["src/"]
  },
  "fmt": {
    "include": ["src/"],
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
} 